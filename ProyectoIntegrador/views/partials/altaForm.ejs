<section class="section-alta-form">
    <header class="section-alta-form__header">
        <h1 class="section-alta-form__header-tittle">¿Qué quieres vender?</h1>
    </header>

    <form action="/alta" method="POST" enctype="multipart/form-data" class="form">
        <fieldset class="form__general-info">
            <legend class="form__general-info-legend">Información general:</legend>
            <div class="form__name-field">
                <label for="name">Nombre:*</label>
                <input 
                    type="text" 
                    id="name"
                    name="name"
                    value="<%= product.name %>"
                >
            </div>
            <div class="form__price-field">
                <label for="price">Precio:*</label>
                <input 
                    type="number" 
                    id="price"
                    name="price"
                    value="<%= product.price %>"
                >
            </div>
            <div class="form__stock-field">
                <label for="stock">Stock:*</label>
                <input 
                    type="number" 
                    id="stock"
                    name="stock"
                    value="<%= product.stock %>"
                >
            </div>
            <div class="form__brand-field">
                <label for="brand">Marca:*</label>
                <input 
                    type="text" 
                    id="brand"
                    name="brand"
                    value="<%= product.brand %>"
                >
            </div>
            <div class="form__category-field">
                <label for="category">Categoria:*</label>
                <input 
                    type="text" 
                    id="category"
                    name="category"
                    value="<%= product.category %>"
                >
            </div>
        </fieldset>
        <fieldset class="form__description-info">
            <legend class="form__description-info-legend">Descripciones:</legend>
            <div class="form__short-description-field">
                <label for="shortDescription">Descripcion corta:*</label>
                <input 
                    type="text" 
                    id="shortDescription"
                    name="shortDescription"
                    value="<%= product.shortDescription %>"
                >
            </div>
            <div class="form__long-description-field">
                <label for="longDescription">Descripcion larga:*</label>
                <textarea 
                    id="longDescription" 
                    cols="30" 
                    rows="10"
                    name="longDescription"
                >
                    <%= product.longDescription %>
                </textarea>
            </div>
        </fieldset>
        <fieldset class="form__shipping-info">
            <label for="freeShipping">Envio sin cargo:</label>
            <input 
                type="checkbox"
                class="form__shipping-option" 
                name="freeShipping"  
                id="freeShipping"
                value="<%= product.freeShipping %>"
            > 
        </fieldset>
        <fieldset class="form__age-info">
            <legend class="form__age-info-lengend">Edades:</legend>
            <div class="form__min-age-field">
                <label for="minAge">Edad desde:*</label>
                <input 
                    type="number" 
                    id="minAge"
                   name="minAge"
                   value="<%= product.minAge %>"
                >
            </div>
            <div class="form__max-age-field">
                <label for="maxAge">Edad hasta:</label>
                <input 
                    type="number" 
                    id="maxAge"
                    name="maxAge"
                    value="<%= product.maxAge %>"
                >
            </div>
        </fieldset>
        <fieldset class="form__product-image">
            <label for="productImage">Seleccione una imagen</label>
            <input 
                type="file" 
                id="productImage" 
                name="productImage"
                accept="image/*"
            >
        </fieldset>
        <div class="form__button-container">
            <input type="submit" value="Publicar" >
        </div>
        
    </form>
</section>